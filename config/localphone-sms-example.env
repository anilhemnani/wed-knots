# Production Configuration Example for Localphone SMS

# Create a file: config/prod.env or use environment variables

# Localphone SIP Server Configuration
export SMS_PROVIDER=localphone
export LOCALPHONE_API_URL=https://sms.localphone.com/api/send
export LOCALPHONE_USERNAME=your-localphone-username
export LOCALPHONE_PASSWORD=your-localphone-password
export SMS_SENDER_ID=WedKnots

# Or for application-prod.yml:
delivery:
  sms:
    enabled: true
    provider: localphone
    api-url: https://sms.localphone.com/api/send
    username: your-localphone-username
    password: your-localphone-password
    sender-id: WedKnots

