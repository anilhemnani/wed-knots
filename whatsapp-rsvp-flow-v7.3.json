{
  "version": "7.3",
  "data_api_version": "3.0",
  "routing_model": {
    "WELCOME_SCREEN": [
      "RSVP_SCREEN"
    ],
    "RSVP_SCREEN": [
      "ATTENDING_SCREEN"
    ],
    "ATTENDING_SCREEN": [
      "ATTENDEE_COUNT_SCREEN"
    ],
    "ATTENDEE_COUNT_SCREEN": [
      "TRAVEL_SCREEN"
    ],
    "TRAVEL_SCREEN": [
      "SUCCESS_SCREEN"
    ],
    "SUCCESS_SCREEN": []
  },
  "screens": [
    {
      "id": "WELCOME_SCREEN",
      "title": "Wedding Invitation",
      "data": {
        "guest_id": {
          "type": "string",
          "__example__": "123"
        },
        "event_id": {
          "type": "string",
          "__example__": "456"
        },
        "guest_name": {
          "type": "string",
          "__example__": "John Doe"
        },
        "bride_name": {
          "type": "string",
          "__example__": "Alice"
        },
        "groom_name": {
          "type": "string",
          "__example__": "Bob"
        },
        "wedding_date": {
          "type": "string",
          "__example__": "February 14, 2026"
        },
        "wedding_location": {
          "type": "string",
          "__example__": "Grand Hotel, London"
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Hi ${data.guest_name}! üëã"
          },
          {
            "type": "TextBody",
            "text": "You're invited to the wedding of *${data.bride_name} & ${data.groom_name}*"
          },
          {
            "type": "TextCaption",
            "text": "üìÖ ${data.wedding_date}\nüìç ${data.wedding_location}"
          },
          {
            "type": "Footer",
            "label": "Continue to RSVP",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "RSVP_SCREEN"
              },
              "payload": {
                "guest_id": "${data.guest_id}",
                "event_id": "${data.event_id}",
                "guest_name": "${data.guest_name}",
                "bride_name": "${data.bride_name}",
                "groom_name": "${data.groom_name}"
              }
            }
          }
        ]
      }
    },
    {
      "id": "RSVP_SCREEN",
      "title": "RSVP",
      "data": {
        "guest_id": {
          "type": "string",
          "__example__": "123"
        },
        "event_id": {
          "type": "string",
          "__example__": "456"
        },
        "guest_name": {
          "type": "string",
          "__example__": "John Doe"
        },
        "bride_name": {
          "type": "string",
          "__example__": "Alice"
        },
        "groom_name": {
          "type": "string",
          "__example__": "Bob"
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Will you be attending?"
          },
          {
            "type": "TextBody",
            "text": "Please confirm your attendance for ${data.bride_name} & ${data.groom_name}'s wedding"
          },
          {
            "type": "RadioButtonsGroup",
            "label": "Will you be attending?",
            "name": "rsvp_status",
            "data-source": [
              {
                "id": "attending",
                "title": "‚úÖ Yes, I will attend"
              },
              {
                "id": "not_attending",
                "title": "‚ùå Sorry, I can't attend"
              }
            ],
            "required": true
          },
          {
            "type": "Footer",
            "label": "Continue",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "ATTENDING_SCREEN"
              },
              "payload": {
                "guest_id": "${data.guest_id}",
                "event_id": "${data.event_id}",
                "guest_name": "${data.guest_name}",
                "rsvp_status": "${form.rsvp_status}"
              }
            }
          }
        ]
      }
    },
    {
      "id": "ATTENDING_SCREEN",
      "title": "Guest Count",
      "data": {
        "guest_id": {
          "type": "string",
          "__example__": "123"
        },
        "event_id": {
          "type": "string",
          "__example__": "456"
        },
        "guest_name": {
          "type": "string",
          "__example__": "John Doe"
        },
        "rsvp_status": {
          "type": "string",
          "__example__": "attending"
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Thank you for your response!"
          },
          {
            "type": "TextBody",
            "text": "Please provide additional details below"
          },
          {
            "type": "TextInput",
            "name": "attendee_count",
            "label": "How many people will attend? (If attending)",
            "input-type": "text",
            "required": false,
            "helper-text": "Skip if not attending"
          },
          {
            "type": "Footer",
            "label": "Next",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "ATTENDEE_COUNT_SCREEN"
              },
              "payload": {
                "guest_id": "${data.guest_id}",
                "event_id": "${data.event_id}",
                "guest_name": "${data.guest_name}",
                "rsvp_status": "${data.rsvp_status}",
                "attendee_count": "${form.attendee_count}"
              }
            }
          }
        ]
      }
    },
    {
      "id": "ATTENDEE_COUNT_SCREEN",
      "title": "Travel Info",
      "data": {
        "guest_id": {
          "type": "string",
          "__example__": "123"
        },
        "event_id": {
          "type": "string",
          "__example__": "456"
        },
        "guest_name": {
          "type": "string",
          "__example__": "John Doe"
        },
        "rsvp_status": {
          "type": "string",
          "__example__": "attending"
        },
        "attendee_count": {
          "type": "string",
          "__example__": "2"
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Travel Arrangements"
          },
          {
            "type": "TextBody",
            "text": "How will you reach the venue?"
          },
          {
            "type": "RadioButtonsGroup",
            "label": "Choose your travel mode",
            "name": "travel_mode",
            "data-source": [
              {
                "id": "flight",
                "title": "‚úàÔ∏è Flight"
              },
              {
                "id": "train",
                "title": "üöÇ Train"
              },
              {
                "id": "car",
                "title": "üöó Car"
              },
              {
                "id": "other",
                "title": "Other"
              }
            ],
            "required": false
          },
          {
            "type": "Footer",
            "label": "Continue",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "TRAVEL_SCREEN"
              },
              "payload": {
                "guest_id": "${data.guest_id}",
                "event_id": "${data.event_id}",
                "guest_name": "${data.guest_name}",
                "rsvp_status": "${data.rsvp_status}",
                "attendee_count": "${data.attendee_count}",
                "travel_mode": "${form.travel_mode}"
              }
            }
          }
        ]
      }
    },
    {
      "id": "TRAVEL_SCREEN",
      "title": "Travel Details",
      "data": {
        "attendee_count": {
          "type": "string",
          "__example__": "2"
        },
        "travel_mode": {
          "type": "string",
          "__example__": "flight"
        },
        "guest_id": {
          "type": "string",
          "__example__": "123"
        },
        "event_id": {
          "type": "string",
          "__example__": "456"
        },
        "guest_name": {
          "type": "string",
          "__example__": "John Doe"
        },
        "rsvp_status": {
          "type": "string",
          "__example__": "attending"
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "Travel Details (Optional)"
          },
          {
            "type": "TextInput",
            "name": "travel_details",
            "label": "Flight/Train number or other details",
            "input-type": "text",
            "required": false,
            "helper-text": "e.g., AI 123, arriving 2:30 PM"
          },
          {
            "type": "Footer",
            "label": "Submit RSVP",
            "on-click-action": {
              "name": "navigate",
              "next": {
                "type": "screen",
                "name": "SUCCESS_SCREEN"
              },
              "payload": {
                "guest_id": "${data.guest_id}",
                "event_id": "${data.event_id}",
                "guest_name": "${data.guest_name}",
                "rsvp_status": "${data.rsvp_status}",
                "attendee_count": "${data.attendee_count}",
                "travel_mode": "${data.travel_mode}",
                "travel_details": "${form.travel_details}"
              }
            }
          }
        ]
      }
    },
    {
      "id": "SUCCESS_SCREEN",
      "title": "Thank You",
      "terminal": true,
      "data": {
        "guest_id": {
          "type": "string",
          "__example__": "123"
        },
        "event_id": {
          "type": "string",
          "__example__": "456"
        },
        "guest_name": {
          "type": "string",
          "__example__": "John Doe"
        },
        "rsvp_status": {
          "type": "string",
          "__example__": "attending"
        },
        "attendee_count": {
          "type": "string",
          "__example__": "2"
        },
        "travel_mode": {
          "type": "string",
          "__example__": "flight"
        },
        "travel_details": {
          "type": "string",
          "__example__": "AI 123"
        }
      },
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "TextHeading",
            "text": "‚úÖ RSVP Received!"
          },
          {
            "type": "TextBody",
            "text": "Thank you ${data.guest_name}! Your response has been recorded."
          },
          {
            "type": "TextCaption",
            "text": "We appreciate your response."
          },
          {
            "type": "Footer",
            "label": "Done",
            "on-click-action": {
              "name": "complete",
              "payload": {
                "guest_id": "${data.guest_id}",
                "event_id": "${data.event_id}",
                "rsvp_status": "${data.rsvp_status}",
                "attendee_count": "${data.attendee_count}",
                "travel_mode": "${data.travel_mode}",
                "travel_details": "${data.travel_details}"
              }
            }
          }
        ]
      }
    }
  ]
}

